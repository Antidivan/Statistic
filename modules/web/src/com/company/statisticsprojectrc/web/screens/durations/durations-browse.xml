<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="durationsesTable"
        messagesPack="com.company.statisticsprojectrc.web.screens.durations">
    <data readOnly="true">
        <collection id="durationsesDc"
                    class="com.company.statisticsprojectrc.entity.Durations"
                    view="_local">
            <loader id="durationsesDl">
                <query>
                    <![CDATA[select e from statisticsprojectrc_Durations e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="durationsesTable"
            spacing="true">
        <filter id="filter"
                applyTo="durationsesTable"
                dataLoader="durationsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="durationsesTable"
                    width="100%"
                    dataContainer="durationsesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="duration"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="durationsesTable.create"/>
                <button id="editBtn" action="durationsesTable.edit"/>
                <button id="removeBtn" action="durationsesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
