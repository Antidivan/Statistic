<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="paymentMethodsesTable"
        messagesPack="com.company.statisticsprojectrc.web.screens.paymentmethods">
    <data readOnly="true">
        <collection id="paymentMethodsesDc"
                    class="com.company.statisticsprojectrc.entity.PaymentMethods"
                    view="_local">
            <loader id="paymentMethodsesDl">
                <query>
                    <![CDATA[select e from statisticsprojectrc_PaymentMethods e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="paymentMethodsesTable"
            spacing="true">
        <filter id="filter"
                applyTo="paymentMethodsesTable"
                dataLoader="paymentMethodsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="paymentMethodsesTable"
                    width="100%"
                    dataContainer="paymentMethodsesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="nameMethod"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="paymentMethodsesTable.create"/>
                <button id="editBtn" action="paymentMethodsesTable.edit"/>
                <button id="removeBtn" action="paymentMethodsesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
