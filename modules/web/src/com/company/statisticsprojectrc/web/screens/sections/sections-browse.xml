<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="sectionsTable"
        messagesPack="com.company.statisticsprojectrc.web.screens.sections">
    <data readOnly="true">
        <collection id="sectionsDc"
                    class="Section"
                    view="_local">
            <loader id="sectionsDl">
                <query>
                    <![CDATA[select e from statisticsprojectrc_Sections e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="sectionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="sectionsTable"
                dataLoader="sectionsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="sectionsTable"
                    width="100%"
                    dataContainer="sectionsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="nameSection"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="sectionsTable.create"/>
                <button id="editBtn" action="sectionsTable.edit"/>
                <button id="removeBtn" action="sectionsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
