<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="sitesesTable"
        messagesPack="com.company.statisticsprojectrc.web.screens.sites">
    <data readOnly="true">
        <collection id="sitesesDc"
                    class="WSite"
                    view="_local">
            <loader id="sitesesDl">
                <query>
                    <![CDATA[select e from statisticsprojectrc_Sites e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="sitesesTable"
            spacing="true">
        <filter id="filter"
                applyTo="sitesesTable"
                dataLoader="sitesesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="sitesesTable"
                    width="100%"
                    dataContainer="sitesesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="siteName"/>
                <column id="siteRegion"/>
                <column id="urlSite"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="sitesesTable.create"/>
                <button id="editBtn" action="sitesesTable.edit"/>
                <button id="removeBtn" action="sitesesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
